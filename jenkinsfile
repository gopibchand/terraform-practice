pipeline {
    agent any
    stages {
        stage('checkout') {
            steps {
        checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/gopibchand/terraform-practice.git']])
        }
    }
        stage('build') {
            steps {
        sh 'cd EKS-Creation'
        sh 'pwd'
        sh 'ls -lrt'
        }
    }
    stage ('Terraform scripts') {
        steps {
            sh '''
            pwd
            ls -lrt
            cd EKS-Creation 
            terraform init
            terraform validate
            terraform plan
            '''
        }
    }
    }
}
